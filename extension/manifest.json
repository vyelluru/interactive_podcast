{
  "manifest_version": 3,
  "name": "Interactive Podcast (MVP)",
  "version": "0.2.0",
  "description": "Ask questions about the current Spotify podcast moment.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://open.spotify.com/*", 
"https://interactive-podcast.onrender.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Interactive Podcast"
  },
  "content_scripts": [
    {
      "matches": ["https://open.spotify.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
